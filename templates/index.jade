extends ./layout.jade


block header
    include ./lib.jade
    .container-fluid
        include ./navbar.jade
        #hutreihe.row
        .row
            .col-md-2.col-sm-0
            .col-md-8.col-sm-12
                .row.row-centered.hat-row
                    each char in characters
                        .col-md-3.col-xs-12.col-sm-6.hut-col.col-centered
                            img.img-circle.img-responsive.char-img(src=getHut(char), alt="")
                            h2.text-center.char-name=char.metadata.name



                    
block main
    .container
        .row
            div.col-md-8
                != page.html
